<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="stylesheets/profile-theater.css">
</head>
<body>

    <header>
        <div class="nevbar">
            <div class="logo">
                <img src="images/logo.jpg" height="100%" width="100%">
            </div>

            <div class="name">
                <p>THE FILM NOSTALGIA</p>
            </div>

            <div class="buttons-nav">
                <div class="about">
                    <a href="/profile-page-theater">profile</a>
                </div>
    
                <div class="about">
                    <a href="/about">about</a>
                </div>
    
                <div class="about">
                    <a href="/logout">logout</a>
                </div>
            </div>
        </div>
    </header>

    <div class="top-heading">
        <h1>Top Ranking . . .</h1>
    </div>


    <div class="top3">
        <% if (movies.length === 0) { %>
            <p>No movies available.</p>
        <% } else { %>
            <% movies.forEach(movie => { %>
                    <div class="topcard">
                        <div class="movienameandvote">
                            <p><%= movie.moviename %></p>
                        </div>

                        <div class="topimage">
                            <% if (movie.image && movie.image.data) { %>
                                <img src="data:<%= movie.image.contentType %>;base64,<%= movie.image.data.toString('base64') %>" height="100%" width="100%" alt="Movie Image">
                            <% } else { %>
                                <p>No image available</p>
                            <% } %>
                        </div>

                        <div class="movienameandvote">
                            <p>votes <%= movie.vote %></p>
                        </div>
                    </div>
                <% }); %>
            <% } %>
    </div>

    <div class="buttons">

        <div>
            <button class="btn"  onclick="window.location.href='add-more' ">add more</button>
        </div>

        <div>
            <button class="btn" onclick="window.location.href='list' ">list of all movies</button>
        </div>

        <div>
            <button class="btn" onclick="window.location.href='finalize-for-booking' ">finalize for booking</button>
        </div>

    </div>

</body>
</html>