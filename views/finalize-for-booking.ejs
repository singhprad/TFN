<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login Page</title>
    <link rel="stylesheet" href="stylesheets/login-usertheater.css">
</head>
<body>

    <div class="image">
        <img src="images/backgroundimage.jpeg" height="100%" width="100%">
    </div>

    <div class="name-logo">

        <div class="nameOfSite">
            <h3 id="mainName">THE FILM NOSTALGIA</h3>
        </div>
          
    </div>


    <div class="contain">
            <div class="login-box" id="user-login">
                <h2>Finalize for Booking</h2>
                <form action="/finalize-for-booking" method="post">
                    <div class="input-box">
                        <select id="selected" name="moviename" required>
                            <option value="" disabled selected>Select a movie</option>
                            <% movies.forEach(movie => { %>
                                <option value="<%= movie.moviename %>"><%= movie.moviename %></option>
                            <% }); %>
                        </select>
                    </div>
                    <div class="input-box">
                        <input type="text" required name="theatername" placeholder="theatername">
                    </div>
                    <div class="input-box">
                        <input type="date" required name="date">
                    </div>
                    <button type="submit">Done</button>
                </form>
            </div>
    </div>
        
</body>
</html>
